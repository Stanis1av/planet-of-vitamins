<%= render "devise/shared/error_messages", resource: resource %>

<div class="row">
  <h1 class="h3 mb-3 fw-normal"><%= t('.title') %></h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>

    <div class="col-md-5">
      <%= f.label :email, t('.enter_your_email'), class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t('.enter_your_email') %>
    </div>
    <br/>

    <div class="actions">
      <%= f.submit t('.send_confirmation_instructions'), class: "btn btn-primary" %>
    </div>
    <br/>

  <% end %>
</div>

<%= render "devise/shared/links" %>
