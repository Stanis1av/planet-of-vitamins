<%= render "devise/shared/error_messages", resource: resource %>

<div class="form-devise text-center">
  <h1 class="h3 mb-3 fw-normal"><%= t('.title') %></h1>

  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>

    <div class="field">
      <%= f.label :email, t('.enter_email'), class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t('.enter_email') %>
    </div>
    <br/>

    <div class="actions">
      <%= f.submit t('.resend_unlock_instructions'), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
