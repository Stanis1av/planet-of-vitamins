<%= render "devise/shared/error_messages", resource: resource %>

<div class="row">
  <h1 class="h3 mb-3 fw-normal"><%= t('.title')%></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, data: { turbo: false } }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

  <div class="col-md-5">
    <%= f.label :email, t('.current_email'), class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t('.current_email') %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="col-md-5">
    <%= f.label :password, t('.enter_new_password'), class: "form-label" %>
    <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: t('.enter_new_password') %>
      <% if @minimum_password_length %>
        <em><%= "#{@minimum_password_length} #{t('.characters_min')}" %></em>
      <% end %>
  </div>

  <div class="col-md-5">
    <%= f.label :password_confirmation, t('.confirm_new_password'), class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: t('.confirm_new_password') %>
  </div>

  <div class="col-md-5">
    <%= f.label :current_password, t('.current_password'), class: "form-label" %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: t('.current_password') %>
  </div>
  <br/>

  <div class="actions">
    <%= f.submit t('.update'), class: "btn btn-success" %> <%= link_to t('.back'), root_path, class: "btn btn-primary" %>
  </div>
  <br/>
  <% end %>


  <h4 class="fw-normal"><%= t('.cancel_my_account') %></h4>

  <p><%= t('.unhappy') %> <%= link_to t('.cancel_my_account'), registration_path(resource_name), class: "btn btn-danger", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></p>

</div>
